<mah:MetroWindow x:Class="TemplateUI.PreferencesWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                 xmlns:markup="clr-namespace:MahApps.Metro.Markup;assembly=MahApps.Metro"
                 xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
                 xmlns:local="clr-namespace:TemplateUI"
                 mc:Ignorable="d"
                 Title="Preferences" Height="250" Width="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="5"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="5"/>
        </Grid.RowDefinitions>

        <iconPacks:PackIconFeatherIcons 
            Grid.Column="1" Margin="5"
            Kind="Settings"/>

        <TextBlock Text="Font Family"
                   Grid.Column="1" Grid.Row="1"
                   Margin="3" Padding="3"/>
        <ComboBox x:Name="FontFamilyComboBox"
                  Grid.Column="2" Grid.Row="1"
                  Width="150"
                  Margin="3" Padding="3"/>

        <TextBlock Text="Font Size"
                   Grid.Column="1" Grid.Row="2"
                   Margin="3" Padding="3"/>
        <DockPanel Grid.Column="2" Grid.Row="2"
                   Margin="3">
            <TextBox x:Name="FontSizeBox"
                     DockPanel.Dock="Right"
                     TextAlignment="Right"
                     Width="40"
                     Text="{Binding ElementName=slValue, Path=Value, 
                UpdateSourceTrigger=PropertyChanged}"/>
            <Slider x:Name="slValue" Minimum="8" Maximum="32"
                    TickPlacement="BottomRight" TickFrequency="2"
                    mah:SliderHelper.TrackValueFillBrush="DarkBlue"
                    IsSnapToTickEnabled="True"/>
        </DockPanel>

        <Button Grid.Column="3" Grid.Row="3"
                Style="{StaticResource MahApps.Styles.Button.Square.Accent}"
                VerticalAlignment="Bottom"
                Margin="3" Padding="3">
            <Button.Content>
                <TextBlock Text="Save &amp; Close"/>
            </Button.Content>
        </Button>
        <Button Grid.Column="3" Grid.Row="4"
                Style="{StaticResource MahApps.Styles.Button.Square}"
                VerticalAlignment="Bottom"
                Margin="3" Padding="3">
            <Button.Content>
                <TextBlock Text="Cancel"/>
            </Button.Content>
        </Button>

    </Grid>
</mah:MetroWindow>
