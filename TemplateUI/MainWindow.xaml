<mah:MetroWindow x:Class="TemplateUI.MainWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                 xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
                 xmlns:local="clr-namespace:TemplateUI"
                 mc:Ignorable="d"
                 Title="Template Creator" Height="450" Width="800">
    <mah:MetroWindow.LeftWindowCommands>
        <mah:WindowCommands>
            <mah:DropDownButton x:Name="MenuButton" ToolTip="Menu Options">
                <mah:DropDownButton.Icon>
                    <iconPacks:PackIconTypicons Kind="ThMenu" />
                </mah:DropDownButton.Icon>
                <mah:DropDownButton.ItemContainerStyle>
                    <Style BasedOn="{StaticResource {x:Type MenuItem}}"
                           TargetType="{x:Type MenuItem}"/>
                </mah:DropDownButton.ItemContainerStyle>
                <mah:DropDownButton.Items>
                    <MenuItem Name="NewWindow" Header="New">
                        <MenuItem.Icon>
                            <iconPacks:PackIconFeatherIcons 
                                Kind="FilePlus" Margin="3"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="Duplicate Window">
                        <MenuItem.Icon>
                            <iconPacks:PackIconFeatherIcons 
                                Kind="Copy" Margin="3"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="Logs">
                        <MenuItem.Icon>
                            <iconPacks:PackIconMaterial 
                                Kind="History" Margin="3"/>
                        </MenuItem.Icon>
                        <MenuItem Header="Today">
                            <MenuItem.Icon>
                                <iconPacks:PackIconMaterial
                                    Kind="CalendarToday" Margin="3"/>
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="Yesterday">
                            <MenuItem.Icon>
                                <iconPacks:PackIconFontAwesome
                                    Kind="CalendarDaySolid" Margin="3"/>
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="Open Log Folder">
                            <MenuItem.Icon>
                                <iconPacks:PackIconBootstrapIcons 
                                    Kind="Folder2Open" Margin="3"/>
                            </MenuItem.Icon>
                        </MenuItem>
                    </MenuItem>
                    <MenuItem Header="Preferences">
                        <MenuItem.Icon>
                            <iconPacks:PackIconFeatherIcons 
                                Kind="Settings" Margin="3"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="Close">
                        <MenuItem.Icon>
                            <iconPacks:PackIconJamIcons 
                                Kind="CloseRectangleF" Margin="3"
                                Foreground="Red"/>
                        </MenuItem.Icon>
                    </MenuItem>
                </mah:DropDownButton.Items>
            </mah:DropDownButton>
        </mah:WindowCommands>
    </mah:MetroWindow.LeftWindowCommands>
    <mah:MetroWindow.RightWindowCommands>
        <mah:WindowCommands>
            <Button ToolTip="About this app">
                <Button.Content>
                    <iconPacks:PackIconEntypo Kind="Info" />
                </Button.Content>
            </Button>
        </mah:WindowCommands>
    </mah:MetroWindow.RightWindowCommands>

    <Grid>
        <mah:MetroTabControl x:Name="MainTabs">
            <mah:MetroTabItem x:Name="GenericInfoTab"
                     Header="Generic Info">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="5"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="5"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="5"/>
                    </Grid.RowDefinitions>

                    <!--Contact name and phone number sections-->
                    <TextBlock Text="Contact Name"
                               Grid.Column="1" Grid.Row="1"
                               Margin="3" Padding="3"/>
                    <TextBox x:Name="ContactNameBox"
                             Grid.Column="2" Grid.Row="1"
                             Width="150"
                             Margin="3" Padding="3"/>

                    <TextBlock Text="Phone Number"
                               Grid.Column="1" Grid.Row="2"
                               Margin="3" Padding="3"/>
                    <TextBox x:Name="PhoneNumberBox"
                             Grid.Column="2" Grid.Row="2"
                             Width="150"
                             Margin="3" Padding="3"/>
                    
                    <!--Case number and email fields-->
                    <TextBlock Text="Case Number"
                               Grid.Column="3" Grid.Row="1"
                               Margin="50,3,3,3" Padding="3"/>
                    <TextBox x:Name="CaseNumberBox"
                             Grid.Column="4" Grid.Row="1"
                             Width="150"
                             Margin="3" Padding="3"/>

                    <TextBlock Text="Email Address"
                               Grid.Column="3" Grid.Row="2"
                               Margin="50,3,3,3" Padding="3"/>
                    <TextBox x:Name="EmailAddressBox"
                             Grid.Column="4" Grid.Row="2"
                             Width="150"
                             Margin="3" Padding="3"/>
                    
                    <!--Right Aligned buttons-->
                    <StackPanel x:Name="RightAlignedButtonPanel"
                                Grid.Column="6" Grid.Row="1"
                                Grid.RowSpan="6">
                        <Button Content="Copy To Clipboard"
                                Margin="20" Padding="3" Click="CopyToClipboard_Click"/>
                        <Button Content="Clear Data"
                                Margin="20" Padding="3"/>
                        <Button Content="Copy Details"
                                Margin="20" Padding="3"/>
                        <Button Content="Copy Steps"
                                Margin="20" Padding="3"/>
                    </StackPanel>
                    
                    <!--Problem info fields-->
                    <TextBlock Text="Problem"
                               Grid.Column="1" Grid.Row="3"
                               Margin="3,10" Padding="4"/>
                    <TextBox x:Name="ProblemBox"
                             Grid.Column="2" Grid.Row="3"
                             Grid.ColumnSpan="4"
                             Margin="3,10" Padding="3"/>
                    
                    <TextBlock Text="Problem Details"
                               Grid.Column="1" Grid.Row="4"
                               Margin="3" Padding="4"/>
                    <TextBox x:Name="ProblemDetailsBox"
                             Grid.Column="2" Grid.Row="4"
                             Grid.ColumnSpan="4"
                             Margin="3" Padding="3"/>
                    
                    <!--Troubleshooting Steps Field-->
                    <TextBlock Text="Troubleshooting Steps (What are all of the steps taken)"
                               Grid.Column="1" Grid.Row="5"
                               Grid.ColumnSpan="5"
                               Margin="3" Padding="3"/>
                    <TextBox x:Name="TroubleshootStepsBox"
                             Grid.Column="1" Grid.Row="6"
                             Grid.ColumnSpan="5"
                             AcceptsReturn="True" TextWrapping="Wrap"
                             SpellCheck.IsEnabled="True"
                             Margin="3" Padding="3"/>
                    
                    <!--Resolution Details Field-->
                    <TextBlock Text="Resolution Details (Which of the above steps fixed the issue)"
                               Grid.Column="1" Grid.Row="7"
                               Grid.ColumnSpan="5"
                               Margin="3" Padding="3"/>
                    <TextBox x:Name="ResolutionBox"
                             Grid.Column="1" Grid.Row="8"
                             Grid.ColumnSpan="5"
                             Margin="3" Padding="3"/>

                </Grid>
            </mah:MetroTabItem>
            <mah:MetroTabItem Header="Product Info">
                
            </mah:MetroTabItem>
            
        </mah:MetroTabControl>
        
    </Grid>
    
</mah:MetroWindow>
