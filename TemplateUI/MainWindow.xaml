<Window x:Class="TemplateUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TemplateUI"
        mc:Ignorable="d"
        Title="Template Creator" Height="450" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            
            <Menu Grid.Column="0" 
                  Background="White">
                <MenuItem Header="File">
                    <MenuItem Header="New"/>
                    <MenuItem Header="Duplicate Window"/>
                    <Separator/>
                    <MenuItem Header="Preferences"/>
                    <Separator/>
                    <MenuItem Header="Close"/>
                </MenuItem>
                <MenuItem Header="Logs">
                    <MenuItem Header="Today"/>
                    <MenuItem Header="Yesterday"/>
                    <MenuItem Header="Open Log Folder"/>
                </MenuItem>
                <MenuItem Header="Help">
                    <MenuItem Header="Instructions"/>
                    <Separator/>
                    <MenuItem Header="About"/>
                </MenuItem>
            </Menu>
            <Button Content="Extra Button for whatever" 
                    Grid.Column="2"/>
        </Grid>

        <TabControl x:Name="MainTabs"
                    Grid.Row="1">
            <TabItem x:Name="GenericInfoTab"
                     Header="Generic Info">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="5"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="5"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="5"/>
                    </Grid.RowDefinitions>

                    <!--Contact name and phone number sections-->
                    <TextBlock Text="Contact Name"
                               Grid.Column="1" Grid.Row="1"
                               Margin="3" Padding="3"/>
                    <TextBox x:Name="ContactNameBox"
                             Grid.Column="2" Grid.Row="1"
                             Width="150"
                             Margin="3" Padding="3"/>

                    <TextBlock Text="Phone Number"
                               Grid.Column="1" Grid.Row="2"
                               Margin="3" Padding="3"/>
                    <TextBox x:Name="PhoneNumberBox"
                             Grid.Column="2" Grid.Row="2"
                             Width="150"
                             Margin="3" Padding="3"/>
                    
                    <!--Case number and email fields-->
                    <TextBlock Text="Case Number"
                               Grid.Column="3" Grid.Row="1"
                               Margin="50,3,3,3" Padding="3"/>
                    <TextBox x:Name="CaseNumberBox"
                             Grid.Column="4" Grid.Row="1"
                             Width="150"
                             Margin="3" Padding="3"/>

                    <TextBlock Text="Email Address"
                               Grid.Column="3" Grid.Row="2"
                               Margin="50,3,3,3" Padding="3"/>
                    <TextBox x:Name="EmailAddressBox"
                             Grid.Column="4" Grid.Row="2"
                             Width="150"
                             Margin="3" Padding="3"/>
                    
                    <!--Right Aligned buttons-->
                    <StackPanel x:Name="RightAlignedButtonPanel"
                                Grid.Column="6" Grid.Row="1"
                                Grid.RowSpan="5">
                        <Button Content="Copy to Clipboard"
                                Margin="10" Padding="3"/>
                        <Button Content="Clear Data"
                                Margin="10" Padding="3"/>
                        <Button Content="Copy Details"
                                Margin="10" Padding="3"/>
                        <Button Content="Copy Steps"
                                Margin="10" Padding="3"/>
                    </StackPanel>
                    
                   
                </Grid>
                                
            </TabItem>
            
        </TabControl>
        
    </Grid>
</Window>
