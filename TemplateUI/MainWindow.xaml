<Window x:Class="TemplateUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TemplateUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Menu Grid.Row="0">
            <MenuItem Header="File">
                <MenuItem Header="New"/>
                <MenuItem Header="Duplicate Window"/>
                <Separator/>
                <MenuItem Header="Preferences"/>
                <Separator/>
                <MenuItem Header="Close"/>
            </MenuItem>
            <MenuItem Header="Logs">
                <MenuItem Header="Today"/>
                <MenuItem Header="Yesterday"/>
                <MenuItem Header="Open Log Folder"/>
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="Instructions"/>
                <Separator/>
                <MenuItem Header="About"/>
            </MenuItem>
        </Menu>

        <TabControl x:Name="MainTabs"
                    Grid.Row="1">
            
        </TabControl>
        
    </Grid>
</Window>
